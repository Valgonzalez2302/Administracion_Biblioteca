@model Biblioteca.Models.Libro

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
@if (@ViewBag.ErrorMessage != null)
{
    <h3 style="color:red">
        @ViewBag.ErrorMessage
    </h3>
}

@if (@ViewBag.Info != null)
{
    <h3 style="color:darkblue">
        @ViewBag.Info
    </h3>
}

<h3>¿Está seguro de que quiere eliminar el libro?</h3>

<div>
    <div class="card">
        <div class="card-header text-black">
            Detalles del libro
        </div>
        <div class="card-body">

            
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Editorial)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Editorial)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaPublicacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaPublicacion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Genero)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Genero)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ISBN)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ISBN)
                </dd>

            </dl>

        </div>
    </div>

    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-outline-warning" />
            @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-outline-danger" })
        </div>
    }
</div>
