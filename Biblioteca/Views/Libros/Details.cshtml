@model Biblioteca.Models.LibroDetailsView

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>


<div>
    <div class="card">
        <div class="card-header">
            Libro
        </div>
        <div class="card-body">


            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Editorial)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Editorial)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaPublicacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaPublicacion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Genero)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Genero)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ISBN)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ISBN)
                </dd>

            </dl>
        </div>
    </div>

    <hr />
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.LibroId }, new { @class = "btn btn-outline-info" })
    @Html.ActionLink("Registrar Autor", "AddAutor", new { libroId = Model.LibroId }, new { @class = "btn btn-outline-success" })
    @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-outline-danger" })
</p>

<h3>Autores del Libro</h3>
@if (Model.LibroAutores.Count == 0)
{
    <h2 class="text-danger">El libro no tiene autores registrados.</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.LibroAutores[0].Autor.NombreCompleto)
            </th>
        </tr>

        @for (int i = 0; i < Model.LibroAutores.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => Model.LibroAutores[i].Autor.NombreCompleto)
                </td>
                <td>
                    @Html.ActionLink("Desvincular Autor", "RetirarAutor", new { id = Model.LibroAutores[i].LibroAutorId },
                   new { @class = "btn btn-outline-danger", onclick = "return confirm('¿Está seguro de desvincular al autor de su obra?');", }
               )
                </td>
            </tr>
        }

    </table>
}
