@model Biblioteca.Models.LibroAutorView

@{
    ViewBag.Title = "Adicionar Autor";
}

<h2>Registrar Autor al Libro</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.LibroId)

<div class="form-horizontal">
    <div class="card">
        <h5 class="card-header">Autor</h5>
        <div class="card-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.AutorId, "Nombre Autor", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("AutorId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AutorId, "", new { @class = "text-danger" })
                    @if (@ViewBag.Error != null)
                    {
                        <p class=" text-danger">
                            @ViewBag.Error
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
    <hr />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar" class="btn btn-outline-info" />
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-outline-danger" })
        </div>
    </div>
</div>
    

        }



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
